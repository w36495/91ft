<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="signUpActivity"
            type="com.w36495.senty.view.SignUpActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:id="@+id/signup_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/signup_desc1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_email"
                android:textAlignment="center"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"/>

        </LinearLayout>

        <TextView
            android:id="@+id/signup_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desc_signup_main"
            app:layout_constraintTop_toBottomOf="@id/signup_layout1"
            app:layout_constraintEnd_toEndOf="@id/signup_layout1"
            app:layout_constraintBottom_toTopOf="@id/signup_layout2"/>

        <LinearLayout
            android:id="@+id/signup_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/signup_desc1"
            app:layout_constraintStart_toStartOf="@id/signup_desc1"
            app:layout_constraintEnd_toEndOf="@id/signup_desc1"
            app:layout_constraintBottom_toTopOf="@id/btn_signup">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_passwd"
                android:padding="10dp"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/signup_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:inputType="textPassword" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_signup"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/signup_layout2"
            app:layout_constraintStart_toStartOf="@id/signup_layout2"
            app:layout_constraintEnd_toEndOf="@id/signup_layout2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
