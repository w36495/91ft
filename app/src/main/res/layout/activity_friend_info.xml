<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="friendInfoActivity"
            type="com.w36495.senty.view.FriendInfoActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/friend_info_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/baseline_chevron_left_24"
            app:title="@string/toolbar_friend_info"
            app:titleCentered="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_info_img"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/friend_info_toolbar" />

        <LinearLayout
            android:id="@+id/friend_info_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/friend_info_img"
            app:layout_constraintStart_toStartOf="@id/friend_info_img"
            app:layout_constraintTop_toBottomOf="@id/friend_info_img">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_name"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/friend_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:padding="8dp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/friend_info_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/tv_gift_list"
            android:textColor="@color/black"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/btn_rounded_green"
            app:layout_constraintEnd_toEndOf="@id/friend_info_layout1"
            app:layout_constraintStart_toStartOf="@id/friend_info_layout1"
            app:layout_constraintTop_toBottomOf="@id/friend_info_layout1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/friend_info_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_update"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/btn_rounded_gray"
            app:layout_constraintEnd_toEndOf="@id/friend_info_gift"
            app:layout_constraintStart_toStartOf="@id/friend_info_gift"
            app:layout_constraintTop_toBottomOf="@id/friend_info_gift" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/friend_info_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_delete"
            android:textColor="@color/senty_red"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_rounded_gray"
            app:layout_constraintEnd_toEndOf="@id/friend_info_update"
            app:layout_constraintStart_toStartOf="@id/friend_info_update"
            app:layout_constraintTop_toBottomOf="@id/friend_info_update" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
