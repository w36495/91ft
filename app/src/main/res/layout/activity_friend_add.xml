<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="friendAddActivity"
            type="com.w36495.senty.view.FriendAddActivity" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_add_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/friend_add_img_btn"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/friend_add_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_addImg"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/friend_add_img"
            app:layout_constraintStart_toStartOf="@id/friend_add_img"
            app:layout_constraintEnd_toEndOf="@id/friend_add_img"
            app:layout_constraintBottom_toTopOf="@id/friend_add_layout1"/>

        <LinearLayout
            android:id="@+id/friend_add_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/friend_add_img_btn"
            app:layout_constraintStart_toStartOf="@id/friend_add_img_btn"
            app:layout_constraintEnd_toEndOf="@id/friend_add_img_btn"
            app:layout_constraintBottom_toTopOf="@id/friend_add_layout2">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_name"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/friend_add_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/hint_name"
                android:layout_marginEnd="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/friend_add_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/friend_add_layout1"
            app:layout_constraintStart_toStartOf="@id/friend_add_layout1"
            app:layout_constraintEnd_toEndOf="@id/friend_add_layout1">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_phone"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/friend_add_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_phone"
                android:inputType="phone"
                android:layout_marginEnd="10dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/friend_add_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_save"
            android:background="@drawable/btn_dark_grey"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toStartOf="@id/friend_add_layout2"
            app:layout_constraintEnd_toEndOf="@id/friend_add_layout2"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
