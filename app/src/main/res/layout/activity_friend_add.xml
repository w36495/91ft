<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="friendAddActivity"
            type="com.w36495.senty.view.FriendAddActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/friend_add_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/baseline_chevron_left_24"
            app:title="@string/toolbar_friend_add"
            app:titleCentered="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_add_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toTopOf="@id/friend_add_img_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/friend_add_toolbar" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/friend_add_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_rounded_gray"
            android:text="@string/btn_addImg"
            app:layout_constraintBottom_toTopOf="@id/friend_add_layout1"
            app:layout_constraintEnd_toEndOf="@id/friend_add_img"
            app:layout_constraintStart_toStartOf="@id/friend_add_img"
            app:layout_constraintTop_toBottomOf="@id/friend_add_img" />

        <LinearLayout
            android:id="@+id/friend_add_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/friend_add_img_btn"
            app:layout_constraintStart_toStartOf="@id/friend_add_img_btn"
            app:layout_constraintTop_toBottomOf="@id/friend_add_img_btn">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_name"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/friend_add_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:hint="@string/hint_name"
                android:inputType="text" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/friend_add_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/senty_gray1"
            android:text="@string/btn_save"
            app:backgroundTint="@color/senty_gray1"
            app:layout_constraintBottom_toTopOf="@id/adView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="TODO"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
