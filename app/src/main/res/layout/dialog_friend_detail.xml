<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="friendDetailDialog"
            type="com.w36495.senty.view.FriendDetailDialog" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_white_rounded"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/friend_detail_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/friend_detail_img" >

            <ImageButton
                android:id="@+id/friend_detail_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_card_giftcard_24"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/friend_detail_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/title_friendInfo"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/friend_detail_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_close_24"
                android:padding="15dp"
                android:background="@android:color/transparent"/>


        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_detail_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toBottomOf="@id/friend_detail_top_layout"
            app:layout_constraintStart_toStartOf="@id/friend_detail_top_layout"
            app:layout_constraintEnd_toEndOf="@id/friend_detail_top_layout"
            app:layout_constraintBottom_toTopOf="@id/friend_detail_layout1"/>

        <LinearLayout
            android:id="@+id/friend_detail_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/friend_detail_img"
            app:layout_constraintStart_toStartOf="@id/friend_detail_img"
            app:layout_constraintEnd_toEndOf="@id/friend_detail_img"
            app:layout_constraintBottom_toTopOf="@id/friend_detail_layout2">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_name"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/friend_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/friend_detail_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/friend_detail_layout1"
            app:layout_constraintStart_toStartOf="@id/friend_detail_layout1"
            app:layout_constraintEnd_toEndOf="@id/friend_detail_layout1"
            app:layout_constraintBottom_toTopOf="@id/friend_detail_update">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_phone"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/friend_detail_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/friend_detail_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_update"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@id/friend_detail_layout2"
            app:layout_constraintStart_toStartOf="@id/friend_detail_layout2"
            app:layout_constraintEnd_toEndOf="@id/friend_detail_layout2"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
