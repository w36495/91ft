<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="resetPasswdDialog"
            type="com.w36495.senty.view.ResetPasswdDialog" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_white_rounded"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/reset_passwd_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/reset_passwd_layout1" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_card_giftcard_24"
                android:visibility="invisible"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/reset_passwd_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/title_forget_passwd"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/reset_passwd_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_close_24"
                android:padding="15dp"
                android:background="@android:color/transparent"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/reset_passwd_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/reset_passwd_layout"
            app:layout_constraintStart_toStartOf="@id/reset_passwd_layout"
            app:layout_constraintEnd_toEndOf="@id/reset_passwd_layout"
            app:layout_constraintBottom_toTopOf="@id/reset_passwd_check">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_email"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/reset_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_marginEnd="10dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reset_passwd_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_check"
             app:layout_constraintTop_toBottomOf="@id/reset_passwd_layout1"
            app:layout_constraintStart_toEndOf="@id/reset_passwd_layout1"
            app:layout_constraintEnd_toEndOf="@id/reset_passwd_layout1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
