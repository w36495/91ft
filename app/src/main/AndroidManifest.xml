<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.w36495.senty">

    <!-- Gallery permission -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- Camera permission -->
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Senty">
        <activity
            android:name=".view.SplashScreesActivity"
            android:exported="true"
            android:theme="@style/Theme.Senty.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.FriendListActivity" />
        <activity android:name=".view.FriendInfoActivity" />
        <activity android:name=".view.FriendAddActivity" />
        <activity android:name=".view.GiftAddActivity" />
        <activity android:name=".view.SignInActivity" />
        <activity android:name=".view.SignUpActivity" />
        <activity android:name=".view.GiftListActivity" />
    </application>

</manifest>